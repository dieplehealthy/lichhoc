<!-- Firestore and Firebase JS -->
<script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
    import { getFirestore, collection, onSnapshot, doc, setDoc, deleteDoc } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";
    import { setLogLevel } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";

    setLogLevel('debug');

    const firebaseConfig = {
        apiKey: "AIzaSyCy8NFWttHP28NyKflMD8uHJeemHYoyFa0",
        authDomain: "lichhoc-fcf35.firebaseapp.com",
        projectId: "lichhoc-fcf35",
        storageBucket: "lichhoc-fcf35.firebasestorage.app",
        messagingSenderId: "262588554121",
        appId: "1:262588554121:web:e06728ccd6665673045f58"
    };

    const app = initializeApp(firebaseConfig);
    const db = getFirestore(app);
    let currentEditingTask = null;

    setupRealtimeListener();

    let draggedElement = null;

    // Lấy các phần tử cần thiết
    const themeToggle = document.getElementById('theme-toggle');
    const body = document.body;

    // Hàm để chuyển đổi giao diện sáng/tối
    function toggleTheme() {
        const isDarkMode = body.classList.toggle('dark');
        localStorage.setItem('theme', isDarkMode ? 'dark' : 'light');
        updateThemeIcon(isDarkMode);
    }

    // Hàm cập nhật biểu tượng dựa trên giao diện
    function updateThemeIcon(isDarkMode) {
        if (isDarkMode) {
            themeToggle.innerHTML = '<i class="fas fa-sun"></i>';
        } else {
            themeToggle.innerHTML = '<i class="fas fa-moon"></i>';
        }
    }

    // Kiểm tra và áp dụng giao diện đã lưu
    const savedTheme = localStorage.getItem('theme');
    if (savedTheme === 'dark') {
        body.classList.add('dark');
        updateThemeIcon(true);
    } else {
        updateThemeIcon(false);
    }

    // Thêm sự kiện click cho nút chuyển đổi giao diện
    themeToggle.addEventListener('click', toggleTheme);

    function setupRealtimeListener() {
        const appId = firebaseConfig.projectId;
        const tasksCollectionRef = collection(db, "artifacts", appId, "public", "data", "tasks");

        onSnapshot(tasksCollectionRef, (snapshot) => {
            const syncDot = document.getElementById('sync-dot');
            syncDot.style.backgroundColor = 'green';
            syncDot.classList.add('sync-status');

            const tasksByDay = { 'T2': [], 'T3': [], 'T4': [], 'T5': [], 'T6': [], 'T7': [], 'CN': [] };
            snapshot.forEach((doc) => {
                const data = doc.data();
                if (data.day && tasksByDay[data.day]) {
                    tasksByDay[data.day].push({ id: doc.id, ...data });
                }
            });

            renderTasks(tasksByDay);

        }, (error) => {
            console.error("Error listening to Firestore:", error);
            const syncDot = document.getElementById('sync-dot');
            syncDot.style.backgroundColor = 'red';
            syncDot.classList.remove('sync-status');
        });
    }

    function renderTasks(tasksByDay) {
        Object.keys(tasksByDay).forEach(day => {
            const container = document.getElementById(`tasks-${day}`);
            container.innerHTML = '';

            tasksByDay[day].sort((a, b) => {
                const timeA = parseInt(a.text.match(/(\d+)/)?.[0]) || 0;
                const timeB = parseInt(b.text.match(/(\d+)/)?.[0]) || 0;
                return timeA - timeB;
            });

            tasksByDay[day].forEach(task => {
                const taskDiv = document.createElement('div');
                taskDiv.className = 'task-item';
                taskDiv.setAttribute('draggable', true);
                taskDiv.setAttribute('data-task-id', task.id);
                taskDiv.setAttribute('data-task-day', task.day);
                taskDiv.style.backgroundColor = task.color || '#5B21B6';
                taskDiv.textContent = task.text;

                taskDiv.addEventListener('dragstart', (e) => {
                    draggedElement = e.target;
                    e.dataTransfer.setData('text/plain', task.id);
                    e.target.classList.add('dragging');
                });

                taskDiv.addEventListener('dragend', (e) => {
                    e.target.classList.remove('dragging');
                    draggedElement = null;
                });

                taskDiv.onclick = (e) => {
                    e.stopPropagation();
                    openEditTaskModal(task);
                };
                container.appendChild(taskDiv);
            });
        });
    }

    window.allowDrop = function(e) {
        e.preventDefault();
    }

    window.dragEnter = function(e) {
        if (e.target.classList.contains('day-card')) {
            e.target.classList.add('drag-over');
        }
    }

    window.dragLeave = function(e) {
        if (e.target.classList.contains('day-card')) {
            e.target.classList.remove('drag-over');
        }
    }

    window.handleDrop = async function(e) {
        e.preventDefault();
        e.target.classList.remove('drag-over');
        if (draggedElement && e.target.closest('.day-card')) {
            const taskId = draggedElement.dataset.taskId;
            const newDay = e.target.closest('.day-card').id;
            const appId = firebaseConfig.projectId;
            const tasksCollectionRef = collection(db, "artifacts", appId, "public", "data", "tasks");
            const taskRef = doc(tasksCollectionRef, taskId);

            try {
                const syncDot = document.getElementById('sync-dot');
                syncDot.style.backgroundColor = 'orange';
                syncDot.classList.remove('sync-status');

                await setDoc(taskRef, { day: newDay, updatedAt: new Date().toISOString() }, { merge: true });
                console.log("Task day updated successfully!");
            } catch (error) {
                console.error("Error updating task day:", error);
                const syncDot = document.getElementById('sync-dot');
                syncDot.style.backgroundColor = 'red';
                syncDot.classList.remove('sync-status');
            }
        }
    }

    window.openAddTaskModal = function(day) {
        document.getElementById('modal-title').textContent = 'Thêm môn học';
        document.getElementById('task-text').value = '';
        document.getElementById('task-day').value = day;
        document.getElementById('task-color').value = '#5B21B6';
        document.getElementById('task-modal').classList.remove('hidden');
        document.getElementById('task-last-updated').textContent = '';
        currentEditingTask = null;
        updateModalButtons();
    }

    function openEditTaskModal(task) {
        document.getElementById('modal-title').textContent = 'Sửa môn học';
        document.getElementById('task-text').value = task.text;
        document.getElementById('task-day').value = task.day;
        document.getElementById('task-color').value = task.color || '#5B21B6';
        document.getElementById('task-modal').classList.remove('hidden');

        // Cập nhật thời gian chỉnh sửa cuối cùng
        const lastUpdatedEl = document.getElementById('task-last-updated');
        if (task.updatedAt) {
            const date = new Date(task.updatedAt);
            lastUpdatedEl.textContent = `Chỉnh sửa lần cuối: ${date.toLocaleString('vi-VN')}`;
            lastUpdatedEl.style.display = 'block';
        } else {
            lastUpdatedEl.textContent = '';
            lastUpdatedEl.style.display = 'none';
        }

        currentEditingTask = task;
        updateModalButtons();
    }

    window.saveTask = async function() {
        const taskText = document.getElementById('task-text').value.trim();
        const taskDay = document.getElementById('task-day').value;
        const taskColor = document.getElementById('task-color').value;

        if (taskText === '') {
            console.log("Task text cannot be empty.");
            return;
        }

        const syncDot = document.getElementById('sync-dot');
        syncDot.style.backgroundColor = 'orange';
        syncDot.classList.remove('sync-status');

        try {
            const appId = firebaseConfig.projectId;
            const taskData = {
                text: taskText,
                day: taskDay,
                color: taskColor,
                updatedAt: new Date().toISOString()
            };
            if (currentEditingTask) {
                const taskRef = doc(db, "artifacts", appId, "public", "data", "tasks", currentEditingTask.id);
                await setDoc(taskRef, taskData, { merge: true });
                console.log("Task updated successfully!");
            } else {
                const tasksCollectionRef = collection(db, "artifacts", appId, "public", "data", "tasks");
                await setDoc(doc(tasksCollectionRef), taskData);
                console.log("Task added successfully!");
            }
        } catch (error) {
            console.error("Error saving task:", error);
            syncDot.style.backgroundColor = 'red';
        }
        closeModal();
    }

    window.deleteTask = async function() {
        if (!currentEditingTask) return;

        const syncDot = document.getElementById('sync-dot');
        syncDot.style.backgroundColor = 'orange';
        syncDot.classList.remove('sync-status');

        try {
            const appId = firebaseConfig.projectId;
            const taskRef = doc(db, "artifacts", appId, "public", "data", "tasks", currentEditingTask.id);
            await deleteDoc(taskRef);
            console.log("Task deleted successfully!");
        } catch (error) {
            console.error("Error deleting task:", error);
            syncDot.style.backgroundColor = 'red';
        }
        closeModal();
    }

    window.closeModal = function() {
        document.getElementById('task-modal').classList.add('hidden');
    }

    function updateModalButtons() {
        const deleteButton = document.getElementById('delete-task-btn');
        if (deleteButton) {
            deleteButton.classList.toggle('hidden', !currentEditingTask);
        }
    }

    document.getElementById('main-add-btn').onclick = () => openAddTaskModal('T2');

    document.addEventListener('DOMContentLoaded', () => {
        const saveButton = document.getElementById('save-task-btn');
        if (saveButton) {
            const deleteButton = document.createElement('button');
            deleteButton.id = 'delete-task-btn';
            deleteButton.textContent = 'Xóa';
            deleteButton.className = 'px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors hidden';
            deleteButton.onclick = window.deleteTask;
            saveButton.parentNode.insertBefore(deleteButton, saveButton);
        }
    });
</script>

</body>
</html>
